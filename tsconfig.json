{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dev",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "strict": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "lib": ["es2018", "esnext.asynciterable", "DOM"],
    "types": [ "reflect-metadata","jest","node"]
  },
  "include": ["src/**/*", "typings/**/*",  ".env"]
}
